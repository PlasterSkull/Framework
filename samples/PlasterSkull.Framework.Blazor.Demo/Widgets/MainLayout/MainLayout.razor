@inherits LayoutComponentBase

<MudThemeProvider Theme="_mudThemeService.Current"
                  IsDarkMode="_mudThemeService.IsDarkMode" />
<PsContextMenuProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <AppBar OnDrawerTogglerClick="ToggleDrawer" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen"
               ClipMode="DrawerClipMode.Docked"
               Breakpoint="Breakpoint.Md">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>
