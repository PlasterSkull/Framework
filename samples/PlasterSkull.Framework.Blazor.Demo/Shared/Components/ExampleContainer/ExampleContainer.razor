@namespace PlasterSkull.Framework.Blazor.Demo.Shared

@inherits PsComponentBase

<div @attributes="UserAttributes"
     style="@StyleName"
     class="@ClassName d-flex flex-column w-100">
    <div class="mt-2">
        @ExampleInfoContent
    </div>
    <div class="relative border-2 rounded">
        <MudButton StartIcon="@_codeVisibleSwitchButtonIcon"
                   OnClick="_ => _isCodeVisible = !_isCodeVisible"
                   Class="absolute top-0 right-0">
            @_codeVisibleSwitchButtonText
        </MudButton>
        <div class="mt-12">
            @DemoContent
        </div>
        <MudCollapse Expanded="_isCodeVisible">
            @_markupString
        </MudCollapse>
    </div>
</div>

