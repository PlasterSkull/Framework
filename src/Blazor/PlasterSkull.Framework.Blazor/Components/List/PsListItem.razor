@namespace PlasterSkull.Framework.Blazor

@inherits PsComponentBase

<div class="@ClassName overflow-hidden cursor-pointer"
     style="@StyleName"
     @attributes="UserAttributes"
     @onclick="InternalOnClick">
    @if (!Text.IsNullOrEmpty())
    {
        <MudStack Row="true"
                  AlignItems="AlignItems.Center"
                  Class="pa-4 px-md-2 py-md-1">
            @if (string.IsNullOrEmpty(Icon))
            {
                <PsIcon Icon="@Icon"
                        IconType="IconType.Circle"
                        SizeClass="icon-24"
                        Color="@Color"
                        HexColor="@HexColor" />
            }

            <MudText Typo="@TextTypo"
                     Style="@TextStyleName"
                     Class="@TextClassName">
                @Text
            </MudText>

            @if (OptionContent != null)
            {
                <MudStack Row="true"
                          AlignItems="AlignItems.Center"
                          Spacing="1"
                          Class="ms-auto">
                    @OptionContent
                </MudStack>
            }
        </MudStack>
    }
    else
    {
        @ChildContent
    }
</div>